{
  "name": "libby-downloader",
  "version": "1.0.0",
  "description": "CLI tool for managing audiobooks downloaded from Libby via Chrome extension",
  "main": "dist/index.js",
  "bin": {
    "libby": "dist/cli.js"
  },
  "scripts": {
    "build": "npm run build:cli && npm run build:extension",
    "build:cli": "tsc",
    "build:extension": "node scripts/build-extension.mjs",
    "build:extension:watch": "vite build --watch",
    "dev": "tsx src/cli.ts",
    "dev:extension": "vite build --watch",
    "start": "node dist/cli.js",
    "watch": "tsc --watch",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "typecheck": "tsc --noEmit",
    "check-all": "npm run typecheck && npm run lint && npm run format:check && npm run test",
    "prepare": "husky",
    "extension:lint": "web-ext lint --source-dir=chrome-extension --warnings-as-errors",
    "extension:validate": "node scripts/validate-extension.js"
  },
  "keywords": [
    "libby",
    "audiobook",
    "downloader",
    "overdrive"
  ],
  "author": "",
  "license": "MIT",
  "type": "commonjs",
  "lint-staged": {
    "src/**/*.ts": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "chalk": "^5.6.2",
    "commander": "^14.0.2",
    "fluent-ffmpeg": "^2.1.3",
    "inquirer": "^13.2.1",
    "listr2": "^8.2.5",
    "node-id3": "^0.2.9"
  },
  "devDependencies": {
    "@types/chrome": "^0.1.36",
    "@types/fluent-ffmpeg": "^2.1.24",
    "@types/inquirer": "^9.0.9",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.10",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.0",
    "ts-jest": "^29.4.6",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vite-plugin-singlefile": "^2.3.0",
    "web-ext": "^9.2.0"
  }
}
